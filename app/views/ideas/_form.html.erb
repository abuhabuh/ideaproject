<%= form_for @idea, :html => { :multipart => true } do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="photo">
    <%= f.label :photo %><br />
    &nbsp;&nbsp;&nbsp;from file: <%= f.file_field :photo %> <br/>
    &nbsp;&nbsp;&nbsp;or url: <%=text_field_tag :internet_url_path, "" %><br/>
  </div>
  
  <br/>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_field :text %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
