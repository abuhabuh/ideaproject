<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :status, :value => EVENT_STATUS_CREATED %>
  <%= f.hidden_field :num_users_joined, :value => 1 %>
  <%= hidden_field_tag :idea_id, idea_id %>

  <fieldset>
    <legend>Basic Info (required):</legend>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <br/>
    <div class="field">
      Visibility: 
      <%= f.radio_button :visibility, "#{USER_EVENT_VISIBILITY_PUBLIC}" %>
      <%= f.label :visibility_public, "Public" %>

      <%= f.radio_button :visibility, "#{USER_EVENT_VISIBILITY_FRIENDS}" %>
      <%= f.label :visibility_friends, "Friends" %>

      <%= f.radio_button :visibility, "#{USER_EVENT_VISIBILITY_INVITE_ONLY}" %>
      <%= f.label :visibility_invite_only, "Invite Only" %>
    </div>
  </fieldset>
  <br/>
  
  <div class="picture">
    <%= f.label :picture %><br />
    &nbsp;&nbsp;&nbsp;from file: <%= file_field_tag :picture %> <br/>
    &nbsp;&nbsp;&nbsp;or url: <%=text_field_tag :internet_url_path, "" %><br/>
  </div>

  <fieldset>
    <legend>Additional Info:</legend>
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :location %><br />
      <%= f.text_field :location %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :start_date %><br />
      <%= f.date_select :start_date %>
    </div>
    <br/>
    <div class="field">
      <%= f.label :end_date %><br />
      <%= f.date_select :end_date %>
    </div>
  </fieldset>
  <br/>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<br/>

