<% @chat_messages.each do |chat_message| %>
  <tr>
    <td><%= chat_message.idea %></td>
    <td><%= chat_message.text %></td>
    <td><%= chat_message.user %></td>
    <td><%= link_to 'Show', chat_message %></td>
    <td><%= link_to 'Edit', edit_chat_message_path(chat_message) %></td>
    <td><%= link_to 'Destroy', chat_message, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

