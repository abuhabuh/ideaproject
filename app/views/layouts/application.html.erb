<!DOCTYPE html>
<html>
  <head>
    <!-- title is function from app/helpers/ApplicationHelper -->
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= render 'layouts/stylesheets' %>
    <!-- faye server mount location - CHANGE FOR ENVIRONMENT MIGRATION! -->
    <%= javascript_include_tag FAYE_JS_LOC %>

    <%= yield :head %>
  </head>
  <body>

    
    <div class="container" id="user_nav">
      <%= render 'layouts/header' %>
      <section class="round">
	<%= yield %>
      </section>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>
